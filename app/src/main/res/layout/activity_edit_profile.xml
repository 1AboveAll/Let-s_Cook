<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.andro.letscook.activity.EditProfile"
    >
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload"
        app:layout_constraintRight_toLeftOf="@+id/edit_profile_capture_button"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="39dp"
        app:layout_constraintBottom_toTopOf="@+id/edit_profile_name_edit_text"
        app:layout_constraintLeft_toRightOf="@+id/edit_profile_profile_relative_layout"
        android:layout_marginLeft="16dp"
        app:layout_constraintHorizontal_bias="0.535"
        android:id="@+id/edit_profile_upload_button"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capture"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/edit_profile_capture_button"
        android:layout_marginBottom="39dp"
        app:layout_constraintBottom_toTopOf="@+id/edit_profile_name_edit_text" />

    <TextView
        android:layout_margin="5dp"
        android:padding="5dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Edit Your Profile"
        android:textStyle="bold"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:alpha="0.9"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        android:id="@+id/edit_profile_edit_profile_text_view" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Name "
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_profile_profile_relative_layout"
        android:layout_marginStart="16dp" />
    <EditText
        android:id="@+id/edit_profile_name_edit_text"
        android:layout_width="0dp"
        android:inputType="textPersonName"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView3"
        app:layout_constraintLeft_toRightOf="@+id/textView3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp" />

    <TextView
        android:textStyle="bold"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Describe Yourself"
        android:id="@+id/textView2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        android:layout_marginStart="16dp" />

    <EditText
        android:id="@+id/edit_profile_description_edit_text"
        android:backgroundTint="@android:color/transparent"
        android:hint="Describe Yourself"
        android:gravity="top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:inputType="textMultiLine"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/edit_profile_save_changes_button"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:padding="5dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:text="You will lose your profile and recipies that you have saved."
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/edit_profile_remove_account_button"
        android:id="@+id/textView"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Save Changes"
        android:textColor="@color/colorWhite"
        android:textAlignment="center"
        android:textStyle="bold"
        android:background="@color/colorGreen"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        android:layout_marginBottom="20dp"
        android:id="@+id/edit_profile_save_changes_button" />

    <Button
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Remove Account"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:background="@color/colorRed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:id="@+id/edit_profile_remove_account_button"
        android:layout_marginBottom="-77dp" />

    <RelativeLayout
        android:id="@+id/edit_profile_profile_relative_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/edit_profile_edit_profile_text_view"
        android:layout_marginTop="14dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent">

        <ImageView
            android:layout_margin="2dp"
            android:id="@+id/edit_profile_profile_imageview"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_alignTop="@+id/edit_profile_rotate_loading"
            android:layout_alignParentStart="true" />

        <com.victor.loading.rotate.RotateLoading
            android:id="@+id/edit_profile_rotate_loading"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            app:loading_color="@color/colorPrimary"
            app:loading_width="5dp" />
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
