<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:scrollbars="vertical">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:alpha="0.9"
        android:gravity="center"
        android:padding="5dp"
        android:text="Add a Recipe"
        android:textAlignment="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/add_recipe_fragment_recipe_id_material_edit_text"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="Recipe ID"
        app:met_floatingLabelAlwaysShown="true"
        app:met_floatingLabelTextSize="15sp"
        app:met_clearButton="true"
        tools:layout_editor_absoluteY="25dp"
        tools:layout_editor_absoluteX="8dp"
        />
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/add_recipe_fragment_recipe_name_material_edit_text"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="Name of the Recipe"
        app:met_floatingLabelAlwaysShown="true"
        app:met_floatingLabelTextSize="15sp"
        app:met_clearButton="true"
        tools:layout_editor_absoluteY="25dp"
        tools:layout_editor_absoluteX="8dp"
        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/add_recipe_fragment_cuisine_material_edit_text"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="Cuisine"
        app:met_floatingLabelAlwaysShown="true"
        app:met_floatingLabelTextSize="15sp"
        app:met_clearButton="true"
        tools:layout_editor_absoluteY="25dp"
        tools:layout_editor_absoluteX="8dp"
        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/add_recipe_fragment_recipe_type_material_edit_text"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="Type"
        app:met_floatingLabelAlwaysShown="true"
        app:met_floatingLabelTextSize="15sp"
        app:met_clearButton="true"
        tools:layout_editor_absoluteY="25dp"
        tools:layout_editor_absoluteX="8dp"
        />


    <Button
        android:id="@+id/add_recipe_fragment_upload_image_button"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Image"
        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/add_recipe_fragment_description_material_edit_text"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="Description"
        app:met_floatingLabelAlwaysShown="true"
        app:met_floatingLabelTextSize="15sp"
        app:met_clearButton="true"
        tools:layout_editor_absoluteY="25dp"
        tools:layout_editor_absoluteX="8dp"
        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/add_recipe_fragment_servings_material_edit_text"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="Servings"
        app:met_floatingLabelAlwaysShown="true"
        app:met_floatingLabelTextSize="15sp"
        app:met_clearButton="true"
        tools:layout_editor_absoluteY="25dp"
        tools:layout_editor_absoluteX="8dp"
        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/add_recipe_fragment_prep_time_material_edit_text"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="Prep Time (in mins)"
        app:met_floatingLabelAlwaysShown="true"
        app:met_floatingLabelTextSize="15sp"
        app:met_clearButton="true"
        tools:layout_editor_absoluteY="25dp"
        tools:layout_editor_absoluteX="8dp"
        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/add_recipe_fragment_cook_time_material_edit_text"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="Cook Time (in mins)"
        app:met_floatingLabelAlwaysShown="true"
        app:met_floatingLabelTextSize="15sp"
        app:met_clearButton="true"
        tools:layout_editor_absoluteY="25dp"
        tools:layout_editor_absoluteX="8dp"
        />
    <Button
        android:id="@+id/add_recipe_fragment_submit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"/>



</LinearLayout>

    </android.support.v4.widget.NestedScrollView>